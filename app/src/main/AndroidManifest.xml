<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.krishnaghatia.break_no_chain" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".Controllers.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controllers.CheersActivity"
            android:label="@string/title_activity_cheers" >
        </activity>
        <activity
            android:name=".Controllers.CreateGoalActivity"
            android:label="@string/title_activity_create_goal" >
        </activity>
        <activity
            android:name=".Controllers.FriendsGoalsActivity"
            android:label="@string/title_activity_friends_goals" >
        </activity>
        <activity
            android:name=".Controllers.GoalDetailsActivity"
            android:label="@string/title_activity_goal_details" >
        </activity>
        <activity
            android:name=".Controllers.PersonalNotesActivity"
            android:label="@string/title_activity_personal_notes" >
        </activity>
        <activity
            android:name=".Controllers.RewardsActivity"
            android:label="@string/title_activity_rewards" >
        </activity>
        <activity
            android:name=".Controllers.ViewGoalsActivity"
            android:label="@string/title_activity_view_goals" >
        </activity>
        <activity android:name="com.facebook.LoginActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".Controllers.CreateNewUser"
            android:label="@string/title_activity_create_new_user" >
        </activity>
        <activity
            android:name=".Controllers.UserLoginActivity"
            android:label="@string/title_activity_user_login" >
        </activity>
        <activity
            android:name=".Controllers.DatabaseHelper"
            android:label="@string/title_activity_database_helper" >
        </activity>
    </application>

</manifest>
